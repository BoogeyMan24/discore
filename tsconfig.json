{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"removeComments": true,
		"noImplicitAny": true,
		"module": "esnext",
		"moduleResolution": "bundler",
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}